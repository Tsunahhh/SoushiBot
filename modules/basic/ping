import discord
from discord import app_commands
from discord.ext import commands

class Ping(commands.Cog):
    def __init__(self, bot) -> None:
        self.bot = bot

    @app_commands.commands(name="ping", description="pong ! ms")
    async def ping(self, interaction: discord.Interaction):
        """
            Simple command to test the reactivity of the discord bot
        """
        latency = round(discord.Client.latency * 1000)
        await interaction.response.send_message("Pong ! {}".format(latency), ephemeral=True)

async def setup(bot):
    await bot.add_cog(Ping(bot))